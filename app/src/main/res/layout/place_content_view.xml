                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:text=""
                android:textAlignment="gravity"
